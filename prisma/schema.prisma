generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Use a direct (non-pooled) connection for migrations. Set DIRECT_URL in .env to the 5432 connection.
  directUrl = env("DIRECT_URL")
}

model SensorData {
  id          String   @id @default(cuid())
  deviceId    String
  temperature Float
  humidity    Float
  pressure    Float
  rssi        Int?
  uptime      BigInt?
  heapFree    Int?
  lastError   String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([deviceId, createdAt])
}
